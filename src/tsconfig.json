{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",

        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,

        "noImplicitAny": true,
        "sourceMap": true,
        "allowJs": true,

        "baseUrl": ".",
        "outDir": "../ts_built/"
    },
    "awesomeTypescriptLoaderOptions": {
      "useBabel": true,
      "babelOptions": {
        "sourceMaps": true,
        "presets": ["latest"]
      },
      "forkChecker": true,
      "useWebpackText": true
    },
    "atom": { "rewriteTsconfig": false }
}
