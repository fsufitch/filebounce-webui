{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "moduleResolution": "node",

        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,

        "noImplicitAny": true,
        "sourceMap": true,
        "allowJs": true,

        "baseUrl": ".",
        "outDir": "../ts_built/",

        "types": [
          "core-js",
          "long",
          "node",
          "ws"
        ],
        "typeRoots": [
          "../node_modules/@types"
        ]
    },
    "awesomeTypescriptLoaderOptions": {
      "forkChecker": true,
      "useWebpackText": true
    },
    "atom": { "rewriteTsconfig": false }
}
